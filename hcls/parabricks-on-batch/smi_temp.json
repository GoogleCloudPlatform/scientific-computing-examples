{
  "taskGroups": [
    {
      "taskSpec": {
        "runnables": [
          {
            "container": {
              "imageUri": "nvcr.io/nvidia/clara/clara-parabricks:4.4.0-1",
              "options": "--gpus all",
              "volumes": [
                "/mnt/data:/mnt/data",
                "/mnt/gcs/share:/mnt/gcs/share"
              ],
              "entrypoint": "/bin/bash",
              "commands": [
                "-c",
                "/mnt/gcs/share/8gpu.sh"
              ]
            }
          }
        ],
        "volumes": [
          {
            "deviceName": "new-pd",
            "mountPath": "/mnt/data",
            "mountOptions": "rw,async"
          },
          {
            "gcs": {
              "remotePath": "${GCSPATH}"
            },
            "mountPath": "/mnt/gcs/share"
          }
        ],
        "maxRetryCount": 2,
        "maxRunDuration": "86400s"
      },
      "taskCount": 1
    }
  ],
  "allocationPolicy": {
    "instances": [
      {
        "installGpuDrivers": true,
        "installOpsAgent": true,
        "policy": {
          "machine_type": "g2-standard-48",
          "disks": [
            {
              "newDisk": {
                "sizeGb": 200,
                "type": "pd-ssd"
              },
              "deviceName": "new-pd"
            }
          ],
          "bootDisk": {
            "sizeGb": 300,
            "image": "projects/batch-custom-image/global/images/family/batch-debian-11-official"
          }
        }
      }
    ],
    "location": {
      "allowedLocations": [
        "zones/us-east1-c",
        "zones/us-east1-d",
        "zones/us-east1-b"
      ]
    }
  },
  "labels": {
    "user": "qwiklabs"
  },
  "logsPolicy": {
    "destination": "CLOUD_LOGGING"
  }
}